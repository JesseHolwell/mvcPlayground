                            <h4><b>John Doe</b></h4>
                            <p>Chief Architect</p>
                        </div>
                    </div>
                }
            </div>
        }
        <div class="team-fill">
            <p>Write some content and stuff down yea</p>
            <p>...</p>
            <h2>Maybe a heading or two</h2>
        </div>

    </div>
</div>

<script type="text/javascript">

    $(function () {

        $('.team').click(function () {

            var initialState = $(this).next('.cards').hasClass('display-none');
            showHideElement(this, initialState);

            //$(this).find('.cards').toggleClass //addClass("sele;

        })

        function showHideElement(element, value) {
            //hide all other things
            $(element).parent('.teams').find('.cards').addClass('display-none');
            $(element).parent('.teams').find('.cards').removeClass('selected');
            $('.team-fill').removeClass('display-none');

            //show clicked
            if (value) {
                $(element).next('.cards').removeClass('display-none');
                $(element).next('.cards').addClass('selected');

                $('.team-fill').addClass('display-none');
            }
        }

    });

</script>

