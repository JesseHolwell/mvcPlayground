<div class="row">
    <div class="col-md-12 teams">
        @foreach (var team in teams)
        {
            <div class="team">

                <p>Icon</p>
                <p>@team</p>

            </div>
            <div class="cards display-none">
                @foreach (var person in team)
                {
                    <div class="card">
                        <img src="https://ei.marketwatch.com//Multimedia/2016/09/29/Photos/ZH/MW-EW860_bull_b_20160929101543_ZH.jpg?uuid=3559207a-864f-11e6-81c1-00137241c023" alt="Avatar">
